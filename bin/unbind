#!/usr/bin/env python

import sys
import json

import unbind.shared_canvas

if len(sys.argv) != 3:
    print
    print "usage: unbind tei.xml http://example.com/manifest/"
    print
    sys.exit(1)

tei_file = sys.argv[1]
sc_manifest_uri = sys.argv[2]

m = unbind.shared_canvas.Manifest(tei_file, sc_manifest_uri)
j = m.jsonld()
print json.dumps(j, indent=2)
